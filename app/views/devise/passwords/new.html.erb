<div class="row register">
  <div class="col-lg-6 offset-lg-3">
    <div class="register_form_title">Forgot your password?</div>
    <div class="register_form_container">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row register_row">
          <div class="col-lg-12 register_col">
          	<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input", placeholder: "Email" %>
          </div>
          <div class="col">
          	<%= f.submit "Send me reset password instructions", class: "form_button trans_200" %>
          </div>
        </div>
      <% end %>
      </br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
