<div class="home", style="width: 100%; height: 179px; background: #f1f1f1;">
  <div class="breadcrumbs_container">
    <div class="container">
      <div class="row">
        <div class="col">
          <ul class="breadcrumbs_list d-flex flex-row align-items-center justify-content-start">
            <li><a><%= link_to (t".h"), root_path %></a></li>
            <li><a><%= link_to (t".l"), lessons_path %></a></li>
            <li><a><%= @lesson.category.name %></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="courses">
  <div class="container">
    <div class="row courses_row">
      <div class="col-lg-4 course_col">
        <% @lesson.lesson_words.each_with_index do |lesson_word, index| %>
          <strong><%= index + 1 %>.&ensp;<%= lesson_word.word.content %></strong></br></br>
          <% lesson_word.word.word_answers.shuffle.each do |answer| %>
            <% if lesson_word.word_answer == answer %>
              <% if answer.status == "Correct" %>
                <p class="text-info"><%= answer.content %><span class="label label-primary" style="float:right"><%= t".correct" %></span></p>
              <% elsif answer.status == "Wrong" %>
                <p class="text-danger"><%= answer.content %><span class="label label-danger" style="float:right"><%= t".wrong" %></span></p>
              <% end %>
            <% else %>
              <p><%= answer.content %></p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
