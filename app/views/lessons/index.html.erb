<div class="home", style="width: 100%; height: 179px; background: #f1f1f1;">
	<div class="breadcrumbs_container">
		<div class="container">
			<div class="row">
				<div class="col">
					<ul class="breadcrumbs_list d-flex flex-row align-items-center justify-content-start">
						<li><a><%= link_to (t".h"), root_path %></a></li>
						<li><a><%= t".l" %></a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="courses">
    <div class="container">
        <div class="row courses_row">
            <div class="col-lg-4 course_col">
            <%= t".l" %>

            <!--- Form To Create Test !--->

            <%= form_for :lesson do |f| %>
              <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true %>
              <%= f.submit "Create Lesson", class: "btn-primary btn-lg" %>
            <% end %>
            </div>

            <!--- Table To List Test !--->

            <div class="table-responsive", style="padding-top: 50px;">
            <table class="table">
              <thead>
                <tr class="table-dark text-dark">
                  <th><%= t".c" %></th>
                  <th><%= t".i" %></th>
                  <th><%= t".d" %></th>
                  <th><%= t".q" %></th>
                  <th><%= t".t" %></th>
                  <th><%= t".r" %></th>
                  <th><%= t".s" %></th>
                </tr>
              </thead>
              <tbody>
                <% @lessons.each do |lesson| %>
                <tr>
                  <td><%= lesson.created_at.strftime(t".strftime") %></td>
                  <td><%= lesson.category.name %></td>
                  <td><%= t".test_time" %></td>
                  <td><%= t".20" %></td>
                  <td></td>
                  <td><%= lesson.mark %></td>
                  <td>
                    <% if lesson.mark.blank? %>
                      <%= link_to (t".test"), lesson_path(lesson), class: "btn-primary btn-lg" %>
                    <% elsif lesson.mark.present? %>
                      <%= link_to (t".completed"), completed_lesson_path(lesson), class: "btn-success btn-lg" %>
                    <%end%>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
            </div>
            
        </div>
    </div>
</div>
